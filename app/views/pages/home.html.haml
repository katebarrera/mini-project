- unless @blogs.empty?
  %h2 Live Blogs

  %table
    %thead
      %tr
        %th Title
        %th Caption
        %th Description
        %th{:colspan => "3"}
    %tbody
      - @blogs.each do |blog|
        - unless blog.is_draft? and blog.is_archived?
          %tr
            %td= blog.title
            %td= blog.caption
            %td= blog.description
  %br/        
  = will_paginate @blogs
- else
  %p Empty
