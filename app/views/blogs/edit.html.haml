-if @blog.is_draft = true
  %h1 Edit Blog
  =form_for @blog do |f|
    =f.label :title 
    %br/
    =f.text_field :title
    %br/

    =f.label :caption 
    %br/
    =f.text_field :caption
    %br/

    =f.label :description 
    %br/
    =f.text_area :description
    %br/

    =f.label :category
    %br/
    %select.js-example-basic-multiple{:multiple => "multiple", :name => "categories[]", "data-placeholder" => "Choose category"}
      - @categories.each do |category|
        -if @blog.categories.include?(category)
          %option{:value => "#{category.id}", :selected => "selected"}= category.name 
        -else
          %option{:value => "#{category.id}"}= category.name 
    %br/
    %br/
    =f.submit "Edit"
    =button_to "Back", blogs_path
- else
  %p Blog is not draft