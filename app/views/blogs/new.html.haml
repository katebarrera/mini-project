%p
  %h1 New Blog
  =form_for @blog do |f|
    =f.label :title 
    %br/
    =f.text_field :title
    %br/

    =f.label :caption 
    %br/
    =f.text_field :caption
    %br/

    =f.label :description 
    %br/
    =f.text_area :description
    %br/

    =f.label :category
    %br/
    %select.js-example-basic-multiple{:multiple => "multiple"}
      %option{:value => "ART"} Art
      %option{:value => "PH"} Photography
      %option{:value => "MOV"} Movie
      %option{:value => "GME"} Game
      %option{:value => "FSH"} Fashion
      %option{:value => "TV"} Television
    %br/
    %br/
    =f.submit "Create"
