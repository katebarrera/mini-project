-if @blog.is_draft = true
      %p
        %h1 Edit Blog
        =form_for @blog do |f|
          =f.label :title 
          %br/
          =f.text_field :title
          %br/

          =f.label :caption 
          %br/
          =f.text_field :caption
          %br/

          =f.label :description 
          %br/
          =f.text_area :description

          %br/
          =f.submit "Edit"
    - else
      %p Blog is not draft