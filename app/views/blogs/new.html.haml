%p
  %h1 New Blog
  %img{id: :displayImage, style: "width:200px; height:200px;"}
  %input{id: "imageUploader", type: :file, style: "display: none"}
  %button{id: "buttonUploader"} Upload Image

  =form_for @blog do |f|

    %textarea{name: "image", id: "base64Image", style: "display:none"}
    
    .field
      =f.label :title 
      %br/
      =f.text_field :title
      %br/

    .field
      =f.label :caption 
      %br/
      =f.text_field :caption
      %br/

    .field
      =f.label :description 
      %br/
      =f.text_area :description

    %br/
    =f.submit "Create"
