= button_to "Create Blog", new_blog_path, :method => "get"
%br/
%h1 Blogs List
%table
  %thead
    %tr
      %th Title
      %th Caption
      %th Description
      %th{:colspan => 3}
  %tbody
    - @blog.each do |blog|
      %tr
        %td= blog.title
        %td= blog.caption
        %td= blog.description

        - if blog.is_draft == true
          %td
            = button_to 'Edit', edit_blog_path(blog)
          %td
            %button{id: "#{blog.id}", :class => "live_button"} Live
        - unless blog.is_draft?
          %td
            - if blog.is_archived?
              %button{id: "#{blog.id}", :class => "archive_button"} Archived
            -else
              %button{id: "#{blog.id}", :class => "archive_button"} Archive

%br/
= will_paginate @blog